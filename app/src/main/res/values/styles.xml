<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="TextTheme" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimaryDarkLight</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BigBoldText" parent="TextTheme">
        <item name="android:textSize">23sp</item>
        <item name="android:lineSpacingExtra">16.8sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/noto_bold</item>
    </style>

    <style name="BigMediumText" parent="TextTheme">
        <item name="android:textSize">23sp</item>
        <item name="android:lineSpacingExtra">-17sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/noto_medium</item>
    </style>

    <style name="BigRegularText" parent="TextTheme">
        <item name="android:textSize">23sp</item>
        <item name="android:lineSpacingExtra">17sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/noto_regular</item>
    </style>

    <style name="SmallBoldText" parent="TextTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">7.5sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/noto_bold</item>
    </style>

    <style name="Nav" parent="TextTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">7.5sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/noto_medium</item>
    </style>

    <style name="ContentText" parent="TextTheme">
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">7.8sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/noto_regular</item>
    </style>

    <style name="CupertinoDialog" parent="@android:style/Theme.Translucent">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>

    <style name="PreferenceScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>
