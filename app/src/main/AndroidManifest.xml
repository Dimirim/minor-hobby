<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dimirim.minorhobby">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="false"
        android:configChanges="screenSize|orientation"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.post.PostActivity"></activity>
        <activity
            android:name=".ui.profile_edit.ProfileEditActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.main.MainActivity" />
        <activity
            android:name=".ui.setting.SettingActivity"
            android:theme="@style/PreferenceScreen">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".ui.profile.ProfileActivity" />
        <activity android:name=".ui.hobby_write.HobbyWriteActivity" />
        <activity android:name=".ui.hobby_request.HobbyRequestActivity" />
        <activity android:name=".ui.hobby_detail.HobbyDetailActivity" />
        <activity
            android:name=".ui.hobby.HobbyActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity
            android:name=".ui.register.RegisterDetailActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.hobby_add.HobbyAddActivity" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
